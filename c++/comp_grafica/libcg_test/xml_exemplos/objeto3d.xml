<?xml version="1.0" ?>
<formas>
	<!--
		Um objeto3d em wireframe possui uma lista de vertices e uma
		lista de arestas.
	-->
	<objeto3d nome="objeto3d" cor="00FF00">
		<!-- 
			Lista de vertices do objeto. A ordem importa!
		-->
		<pontos>
			<ponto x="100.0" y="100.0" z="0.0"/>
			<ponto x="100.0" y="150.0" z="0.0"/>
			<ponto x="150.0" y="150.0" z="0.0"/>
                        <ponto x="150.0" y="100.0" z="0.0"/>
		</pontos>

		<!--
			Lista de arestas cada aresta possui os indices de seus
			vertices na lista de pontos do objeto3d.
		-->
		<arestas>
			<!-- Esta aresta possui pontos[0] e pontos[1] como vertices -->
			<aresta v1="0" v2="1"/>
			<aresta v1="1" v2="2"/>
			<aresta v1="2" v2="3"/>
		</arestas>
	</objeto3d>

</formas>
