<?xml version="1.0" ?>
<formas>
	<curvaHermite nome="curvaH" cor="000000">
		<!-- 
			Uma curva de Hermite pode ser formada com 4 elementos de 
			geometria por vez
		-->
		<geometria>
			<p1 x="0.0"   y="0.0"    z="0.0"/>
			<p4 x="200.0" y="0.0"    z="0.0"/>
			<r1 x="100.0" y="400.0"  z="0.0"/>
			<r4 x="100.0" y="-400.0" z="0.0"/>
		</geometria>
	</curvaHermite>

        <curvaHermite nome="curvaHC" cor="AF0570">
                <geometria>
                        <p1 x="0.0"    y="0.0"    z="0.0"/>
                        <p4 x="-200.0" y="0.0"    z="0.0"/>
                        <r1 x="-100.0" y="400.0"  z="0.0"/>
                        <r4 x="-100.0" y="400.0"  z="0.0"/>
                </geometria>
                <geometria>
                        <p1 x="-200.0" y="0.0"    z="0.0"/>
                        <p4 x="-400.0" y="0.0"    z="0.0"/>
                        <r1 x="-300.0" y="-400.0" z="0.0"/>
                        <r4 x="-300.0" y="-400.0" z="0.0"/>
                </geometria>
        </curvaHermite>
</formas>

